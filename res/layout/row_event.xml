<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:orientation="vertical">
 
<TextView android:id="@+id/eventName"        
        android:textSize="28sp"        
        android:textStyle="bold"
        android:textColor="#FFFF00"  
        android:layout_alignParentTop="true"  
        android:layout_alignParentLeft="true"     
        android:layout_width="fill_parent"        
        android:layout_height="40dp"
        android:text="Event Name"/>

<TextView android:id="@+id/eventDrugStatic"
        android:textSize="16sp"
        android:textStyle="italic"
         android:layout_below="@+id/eventName" 
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:text="Drug Affected: "/>
<TextView android:id="@+id/eventDrugDynamic"
        android:textSize="16sp"
        android:textStyle="italic"
        android:layout_toRightOf="@+id/eventDrugStatic" 
        android:layout_below="@+id/eventName" 
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:text="Drug Dynamic"/>

<TextView android:id="@+id/eventPriceStatic"
        android:textSize="16sp"
        android:textStyle="italic"
         android:layout_toRightOf="@+id/eventDrugDynamic" 
         android:layout_below="@+id/eventName" 
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:text="Change in Price: "/>
<TextView android:id="@+id/eventPriceDynamic"
        android:textSize="16sp"
        android:textStyle="italic"
        android:layout_toRightOf="@+id/eventPricecStatic" 
        android:layout_below="@+id/eventName" 
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:text="Price Dynamic"/>

<TextView android:id="@+id/eventCityStatic"
        android:textSize="16sp"
        android:textStyle="italic"
         android:layout_alignParentLeft="true"
         android:layout_below="@+id/eventDrugStatic" 
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:text="Location: "/>
<TextView android:id="@+id/eventCityDynamic"
        android:textSize="16sp"
        android:textStyle="italic"
        android:layout_toRightOf="@+id/eventCityStatic" 
        android:layout_below="@+id/eventDrugStatic" 
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:text="City Dynamic"/>

<TextView android:id="@+id/eventTerminationStatic"
        android:textSize="16sp"
        android:textStyle="italic"
        android:layout_toRightOf="@+id/eventCityDynamic"
         android:layout_below="@+id/eventPriceStatic" 
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:text="Number of Steps Left:"/>
<TextView android:id="@+id/eventTerminationDynamic"
        android:textSize="16sp"
        android:textStyle="italic"
        android:layout_toRightOf="@+id/eventTerminationStatic" 
        android:layout_below="@+id/eventDrugStatic" 
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:text="termination dynamic"/>
</RelativeLayout>